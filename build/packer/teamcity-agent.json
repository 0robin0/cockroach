{
  "variables": {
    "image_id": "teamcity-agent-{{timestamp}}"
  },

  "builders": [{
      "type": "digitalocean",
      "image": "ubuntu-16-04-x64",
      "region": "nyc1",
      "size": "c-16",
      "snapshot_name": "{{user `image_id`}}",
      "ssh_username": "root",
      "volumes": [{
        "size": 25,
        "snapshot_name": "{{user `image_id`}}-vol"
      }]
  }],

  "provisioners": [{
    "type": "shell",
    "environment_vars": ["DIGITAL_OCEAN_IMAGE_ID={{user `image_id`}}"],
    "script": "teamcity-agent.sh"
  }]
}
